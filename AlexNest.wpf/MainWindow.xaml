<Window x:Class="AlexNest.wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AlexNest.wpf"
        Title="Nesting Viewer"
        Height="800"
        Width="1200">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    Margin="5">
            <Button Name="BtnLoadParts"
                    Click="BtnLoadParts_Click"
                    Margin="2"
                    Padding="10,5">
                Load Parts DXF
            </Button>

            <Button Name="BtnLoadPlate"
                    Click="BtnLoadPlate_Click"
                    Margin="2"
                    Padding="10,5">
                Load Plate DXF
            </Button>

            <Button Name="BtnRunNest"
                    Click="BtnRunNest_Click"
                    Margin="2"
                    Padding="10,5">
                Run Nest
            </Button>
        </StackPanel>

        <Border BorderBrush="Gray"
                BorderThickness="1"
                Margin="5">
            <local:NestViewer x:Name="Viewer" />
        </Border>
    </DockPanel>
</Window>
